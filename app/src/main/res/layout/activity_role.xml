<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/ReceiverButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receiver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomPurpSplitter" />

    <Button
        android:id="@+id/ProviderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Provider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintTop_toBottomOf="@id/bottomPurpSplitter"
        tools:layout_editor_absoluteY="629dp" />

    <TextView
        android:id="@+id/ReceiverBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Receiver"
        android:textAlignment="center"
        android:textColor="#651FFF"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="36dp"
        app:layout_constraintBottom_toTopOf="@id/topPurpSplitter"
        />

    <TextView
        android:id="@+id/ProviderBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Provider"
        android:textAlignment="center"
        android:textColor="#651FFF"
        app:layout_constraintBottom_toTopOf="@id/topPurpSplitter"
        tools:layout_editor_absoluteX="284dp" />

    <TextView
        android:id="@+id/Arrow1"
        android:layout_width="37dp"
        android:layout_height="22dp"
        android:layout_marginEnd="280dp"
        android:drawableTop="@drawable/ic_launcher_foreground"
        android:drawableBottom="@android:drawable/arrow_down_float"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Reciever"
        android:textAlignment="center"
        android:textColor="#651FFF"
        app:layout_constraintBottom_toTopOf="@id/ReceiverBanner"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/Arrow2"
        android:layout_width="31dp"
        android:layout_height="19dp"
        android:layout_marginEnd="80dp"
        android:drawableTop="@drawable/ic_launcher_foreground"
        android:drawableBottom="@android:drawable/arrow_down_float"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Reciever"
        android:textAlignment="center"
        android:textColor="#651FFF"
        app:layout_constraintBottom_toTopOf="@id/ProviderBanner"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-19dp" />

    <TextView
        android:id="@+id/RoleBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="128dp"
        android:fontFamily="@font/alfa_slab_one"
        android:shadowColor="#121111"
        android:shadowDy="100"
        android:text="Specify Role"
        android:textAlignment="center"
        android:textColor="#651FFF"
        android:textColorHighlight="#050505"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/ReceiverBanner"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/ReceiverInfo"
        android:layout_width="185dp"
        android:layout_height="564dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="30"
        android:text="● See a history of your exchanges \n\n ● Filter for specific goods which you may be interested in \n\n ● Able to see the location of the seller. \n\n ● Able to store product preferences to be alerted in the future.  \n\n ● Request used goods in order to have a mutual exchange "
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/ProviderInfo"
        android:layout_width="189dp"
        android:layout_height="564dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="30"
        android:text=" ● See a history of your exchanges \n\n ● Post used goods in order to have a mutual exchange \n\n ● Contact users to discuss the exchange \n\n ● Able to set location of good in order for recievers to locate \n\n\n ● Set product details, and tags for your specific good"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/AlertMessage"
        android:layout_width="421dp"
        android:layout_height="39dp"
        android:text="* Once chosen, account is only able to do the function selected *"
        android:textAlignment="center"
        android:textColor="#F50057"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="710dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roleStatus"
        app:layout_constraintWidth_percent="0.8"/>

    <View
        android:id="@+id/topPurpSplitter"
        android:layout_width="500dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReceiverBanner"
        app:layout_constraintWidth_percent="0.8" />

    <View
        android:id="@+id/bottomPurpSplitter"
        android:layout_width="500dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="@color/design_default_color_primary"
        app:layout_constraintHorizontal_bias="0.473"
        tools:layout_editor_absoluteY="616dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ProviderInfo"
        app:layout_constraintWidth_percent="0.8" />

    <View
        android:id="@+id/rightPurpSplitter"
        android:layout_width="6dp"
        android:layout_height="558dp"
        android:layout_gravity="center"
        android:layout_marginLeft="212dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintLeft_toRightOf="@id/ProviderInfo"
        app:layout_constraintWidth_percent="0.8"
        tools:layout_editor_absoluteY="62dp" />

    <View
        android:id="@+id/leftPurpSplitter"
        android:layout_width="6dp"
        android:layout_height="558dp"
        android:layout_gravity="center"
        android:layout_marginRight="216dp"
        android:background="@color/design_default_color_primary"
        app:layout_constraintRight_toLeftOf="@id/ReceiverInfo"
        app:layout_constraintWidth_percent="0.8"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/roleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="680dp"
        app:layout_constraintTop_toBottomOf="@id/ReceiverButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>